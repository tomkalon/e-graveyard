{% if source == 'person' %}
    {{ component('search_result',{
        search_result: search_result,
        form: form,
        thead: [
            {'name': 'Surname'|trans, 'class': 'col-3'},
            {'name': 'Name'|trans, 'class': 'col-3'},
            {'name': 'Born'|trans, 'class': 'col-2'},
            {'name': 'Death'|trans, 'class': 'col-2'}
        ],
        tbody: [
            {'name': 'surname', 'class': 'col-3'},
            {'name': 'name', 'class': 'col-3'},
            {'name': 'born', 'class': 'col-2', 'type': 'date'},
            {'name': 'death', 'class': 'col-2', 'type': 'date'}
        ],
        page: page,
        limit: limit,
        target: 'app_search',
        type: 'person',
    }) }}
{% elseif source == 'grave' %}
    {% if select_name is defined %}
        {{ component('search_result',{
            select_name: select_name,
            search_result: search_result,
            thead: [
                {'name': 'Sector'|trans, 'class': 'col-1'},
                {'name': 'Row'|trans, 'class': 'col-1'},
                {'name': 'Number'|trans, 'class': 'col-1'}
            ],
            tbody: [
                {'name': 'sector', 'class': 'col-1'},
                {'name': 'row', 'class': 'col-1'},
                {'name': 'number', 'class': 'col-1'}
            ],
            page: page,
            limit: limit,
            target: 'app_search_grave',
            type: 'grave',
        }) }}
    {% else %}
        {{ component('search_result',{
            form: form,
            search_result: search_result,
            thead: [
                {'name': 'Graveyard'|trans, 'class': 'col-1'},
                {'name': 'Sector'|trans, 'class': 'col-1'},
                {'name': 'Row'|trans, 'class': 'col-1'},
                {'name': 'Number'|trans, 'class': 'col-1'}
            ],
            tbody: [
                {'name': 'graveyard', 'class': 'col-1', 'type':'entity-name'},
                {'name': 'sector', 'class': 'col-1'},
                {'name': 'row', 'class': 'col-1'},
                {'name': 'number', 'class': 'col-1'}
            ],
            page: page,
            limit: limit,
            target: 'app_search_grave',
            type: 'grave',
        }) }}
    {% endif %}
{% endif %}
