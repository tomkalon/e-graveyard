<header class="border-bottom border-secondary border-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Offcanvas navbar large">
        <div class="container">
            <div class="btn d-flex gap-2 align-items-center navbar-brand text-uppercase"
                 onclick="location.href='{{ path('app_main') }}'">
                <img src="{{ asset('/build/images/logo.svg') }}" alt="logo" height="34px"/>
                <span class="ms-2">Cmentarze - Parafia Rzezawa</span>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2"
                    aria-controls="offcanvasNavbar2" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar2"
                 aria-labelledby="offcanvasNavbar2Label">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbar2Label">Menu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end d-flex align-items-lg-center flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_main') }}">Start</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Informacje
                            </a>
                            <ul class="dropdown-menu m-0">
                                <li><a class="dropdown-item" href="#">Nowy cmentarz</a></li>
                                <li><a class="dropdown-item" href="#">Stary cmentarz</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Informacje</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_search') }}">
                                <button class="btn btn-success btn-sm" type="button">{{ 'SEARCH'|trans }}</button>
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}">
                                    <button class="btn btn-warning btn-sm" type="button">{{ 'ADMIN'|trans }}</button>
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_MANAGER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_manager') }}">
                                    <button class="btn btn-danger btn-sm" type="button">{{ 'MANAGE'|trans }}</button>
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <button class="btn btn-outline-danger btn-sm" type="button">{{ 'LOGOUT'|trans }}</button>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="container-fluid login-bar">
            <small>Zalogowano: {{ app.user.username }}</small>
        </div>
    {% endif %}
</header>