{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5 mb-3">
        <div class="card">
            <div class="card-header">
                Informacje o zmarłym
            </div>
            <div class="card-body">
                <h4 class="card-title">{{ person.surname }} {{ person.name }}</h4>
                <hr>
                <div class="row">
                    <div class="col-lg-3">
                        <p class="card-text mb-1">Data urodzenia:</p>
                        <h5 class="heading">{{ person.born|date('Y.m.d') }}</h5>
                    </div>
                    <div class="col-lg-3">
                        <p class="card-text mb-1">Data śmierci:</p>
                        <h5 class="heading">{{ person.death|date('Y.m.d') }}</h5>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small>Dodano: {{ person.added|date('Y-m-d') }}</small>
                        {% if person.edited != null %}
                        <small> || Edytowano: {{ person.edited|date('Y-m-d') }}</small>
                        {% endif %}
                    </div>
                    <div>
                        <button class="btn btn-secondary float-end mx-2" onclick="location.href='{{ last_uri }}'">Powrót</button>
                        <button class="btn btn-success float-end" onclick="location.href='{{ path("app_search") }}'">Wyszukiwanie</button>
                    </div>
                </div>
            </div>
        </div>
        {{ component('grave_detail', {
            grave:grave,
            person: person,
        }) }}
        <div class="mt-3">
            <button class="btn btn-secondary float-end mx-2" onclick="location.href='{{ last_uri }}'">Powrót</button>
            <button class="btn btn-success float-end" onclick="location.href='{{ path("app_search") }}'">Wyszukiwanie</button>
        </div>
    </div>
{% endblock %}
