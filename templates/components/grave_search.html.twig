<div{{ attributes }}>
    <h3 class="text-uppercase">Wyszukiwanie grobów</h3><div class="lead">
    </div>
    <hr>
    <div class="form mt-3 overflow-hidden">
        {{ form_start(form, {
            'attr': {'class': 'search-form'}
        }) }}
        {% if form.alert is defined %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="row row-cols-1 row-cols-md-4 g-2">
            <div class="col">
                {{ form_label(form.graveyard, null, {
                    'label': 'Cmentarz*'
                }) }}
                {{ form_widget(form.graveyard,{
                    'attr': {'class': ''}
                }) }}
            </div>
            <div class="col">
                {{ form_label(form.sector, null, {
                    'label': 'Sektor'
                }) }}
                {{ form_widget(form.sector,{
                    'attr': {'class': ''}
                }) }}
            </div>
            <div class="col">
                {{ form_label(form.row, null, {
                    'label': 'Rząd'
                }) }}
                {{ form_widget(form.row,{
                    'attr': {'class': ''}
                }) }}
            </div>
            <div class="col">
                {{ form_label(form.number, null, {
                    'label': 'Numer'
                }) }}
                {{ form_widget(form.number,{
                    'attr': {'class': ''}
                }) }}
            </div>
        </div>

        <div class="mt-3 float-end float-xl-start">
            {% if is_granted('ROLE_MANAGER') %}
                <button type="button" class="btn btn-secondary" onclick="location.href='{{ path('app_person_not_assigned') }}'">Pokaż nieprzypisane</button>
            {% endif %}
            {{ form_widget(form.search,{
                'attr': {'class': 'btn btn-success'},
                'label': 'Wyszukaj'
            }) }}
        </div>
        {{ form_end(form) }}
    </div>
    <hr>
</div>
