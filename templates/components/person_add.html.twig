<div{{ attributes }}>
    <div class="form mt-3 overflow-hidden">
        {{ form_start(form, {
            'attr': {'class': 'search-form'}
        }) }}
        {% if form.alert is defined %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="row row-cols-1 row-cols-lg-2 g-2">
            <div class="col">
                {{ form_label(form.surname, null, {
                    'label': 'Imię'
                }) }}
                {{ form_widget(form.surname,{
                    'attr': {'class': ''}
                }) }}
            </div>
            <div class="col">
                {{ form_label(form.name, null, {
                    'label': 'Nazwisko*'
                }) }}
                {{ form_widget(form.name,{
                    'attr': {'class': ''}
                }) }}
            </div>
        </div>
        <div class="row row-cols-2 mt-4 mb-2">
            <div class="col">
                {{ form_label(form.born, null, {
                    'label': 'Data urodzenia'
                }) }}
                {{ form_widget(form.born,{
                    'attr': {'class': ''}
                }) }}
            </div>
            <div class="col">
                {{ form_label(form.death, null, {
                    'label': 'Data śmierci'
                }) }}
                {{ form_widget(form.death,{
                    'attr': {'class': ''}
                }) }}
            </div>
        </div>
        <div class="d-none">
            {{ form_widget(form.grave) }}
        </div>

        <div class="mt-3">
            {% if close is defined %}
                {% if close == 'js' %}
                    <button type="button" class="btn btn-danger" data-modal-box-close>Anuluj</button>
                {% else %}
                    <button type="button" class="btn btn-danger" onclick="location.href='{{ close }}'">Anuluj</button>
                {% endif %}
            {% else %}
                {% if last_uri is defined and last_uri != app.request.uri %}
                    <button type="button" class="btn btn-secondary" onclick="location.href='{{ last_uri }}'">Powrót</button>
                {% endif %}
                <button type="button" class="btn btn-outline-success" onclick="location.href='{{ path('app_search') }}'">Szukaj</button>
            {% endif %}
            {{ form_widget(form.submit,{
                'attr': {'class': 'btn btn-success'},
                'label': submit
            }) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
